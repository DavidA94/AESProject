            <div class="row">

                @*Heading*@
                <div class="form-group">
                    <div class="col-md-8">
                        <h2><strong>Work History</strong></h2>
                    </div>

                    @*Work Logo*@
                    <div class="col-md-4 slideanim">
                        <span class="glyphicon glyphicon-briefcase logo"></span>
                    </div>
                </div>


                @foreach (var item in Model.WorkHistory)
                {
                    //Employer Name
                    <div class="form-group">
                        @Html.LabelFor(a => item.EmployerName, new { @class = "col-md-4 control-label" })
                        <div class="col-md-push-4">
                            @item.EmployerName
                        </div>
                    </div>

                    //Address
                    <div class="form-group">
                        @Html.LabelFor(a => item.EmployerAddress, new { @class = "col-md-4 control-label" })
                        <div class="col-md-push-4">
                            @item.EmployerAddress
                        </div>
                    </div>

                    //City
                    <div class="form-group">
                        @Html.LabelFor(a => item.EmployerCity, new { @class = "col-md-4 control-label" })
                        <div class="col-md-push-4">
                            @item.EmployerCity
                        </div>
                    </div>

                    //State
                    <div class="form-group">
                        @Html.LabelFor(a => item.EmployerState, new { @class = "col-md-4 control-label" })
                        <div class="col-md-push-4">
                            @item.EmployerState
                        </div>
                    </div>

                    //Zip
                    <div class="form-group">
                        @Html.LabelFor(a => item.EmployerZip, new { @class = "col-md-4 control-label" })
