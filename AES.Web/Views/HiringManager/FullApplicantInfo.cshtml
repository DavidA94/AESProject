        @* References *@
        <div id="references" class="container-fluid bg-white">
            <div class="row">

                @*Heading*@
                <div class="form-group">
                    <div class="col-md-8">
                        <h2><strong>References</strong></h2>
                    </div>

                    @*References Logo*@
                    <div class="col-md-4 slideanim">
                        <span class="glyphicon glyphicon-pencil logo"></span>
                    </div>
                </div>

                @foreach (var item in Model.References)
                {
                    //Reference Name
                    <div class="form-group">
                        @Html.LabelFor(a => item.Name, new { @class = "col-md-2 control-label" })
                        <div class="col-md-push-4">
                            @item.Name
                        </div>
                    </div>

                    //Title
                    <div class="form-group">
                        @Html.LabelFor(a => item.Title, new { @class = "col-md-2 control-label" })
                        <div class="col-md-push-4">
                            @item.Title
                        </div>
                    </div>

                    //Company Name
                    <div class="form-group">
                        @Html.LabelFor(a => item.Company, new { @class = "col-md-2 control-label" })
                        <div class="col-md-push-4">
                            @item.Company
                        </div>
                    </div>

                    //Reference Phone Number
                    <div class="form-group">
                        @Html.LabelFor(a => item.Phone, new { @class = "col-md-2 control-label" })
                        <div class="col-md-push-4">
                            @item.Phone
                        </div>
                    </div>
                }
            </div>
        </div>

        @* Questionnaire *@
        <div id="questionnaire" class="container-fluid bg-grey">
            <div class="row">

                @*Heading*@
                <div class="form-group">
                    <div class="col-md-8">
                        <h2><strong>Questionnaire</strong></h2>
                    </div>

                    @*Questionnaire Logo*@
                    <div class="col-md-4 slideanim">
                        <span class="glyphicon glyphicon-list-alt logo"></span>
                    </div>
                </div>



                @foreach (var item in Model.Questionnaire)
                {
                    if (item.Type.ToString() == "SHORT")
                    {
                        //Question
                        <div class="form-group">
                            @Html.LabelFor(a => item.Question, new { @class = "col-md-2 control-label" })
                            <div class="col-md-push-4">
                                @item.Question
                            </div>
                        </div>

                        //Short Answer
                        <div class="form-group">
                            @Html.LabelFor(a => item.ShortAnswer, "Answer", new { @class = "col-md-2 control-label" })
                            <div class="col-md-10">
                                <textarea class="form-control" name="ShortAnswer" rows="4">@item.ShortAnswer</textarea>
                            </div>
                        </div>

                            <br />
                    }

                    <hr />

                    if (item.Type.ToString() == "RADIO")
                    {
                        //Question
                        <div class="form-group">
                            @Html.LabelFor(a => item.Question, new { @class = "col-md-2 control-label" })
                            <div class="col-md-push-4">
                                @item.Question
                            </div>
                        </div>

                        //Radio Answer
                        <div class="form-group">
                            @Html.LabelFor(a => item.Options, "Answer", new { @class = "col-md-2 control-label" })
                            <div class="col-md-push-4">
                                @if (item.MC_Answers[0])
                                {
                                    @item.Options[0].ToString()
                                }
                                else
                                {
                                    @item.Options[1].ToString()
                                }
                            </div>
                        </div>
                    }

                    if (item.Type.ToString() == "CHECKBOX")
                    {
                        //Question
                        <div class="form-group">
                            @Html.LabelFor(a => item.Question, new { @class = "col-md-2 control-label" })
                            <div class="col-md-push-4">
                                @item.Question
                            </div>
                        </div>

                        //Checkbox Answers
                        <div class="form-group">
                            @Html.LabelFor(a => item.MC_Answers, "Answers:", new { @class = "col-md-12 control-label" })
                            <div class="container-fluid">
                                @for (int i = 0; i < item.Options.Count; ++i)
                                {
                                    <div class="col-md-4">
                                        <strong>@item.Options[i]</strong>
                                    </div>
                                        <div class="col-md-push-2">
                                            @item.MC_Answers[i]
                                        </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>



        @* Notes *@
        <div id="notes" class="container-fluid bg-white">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label for="notes"><strong>Notes:</strong></label>
                        <textarea class="form-control" name="Notes" rows="10" id="notes">@Model.Notes</textarea>
                    </div>
                </div>

                <div class="col-md-4 slideanim">
                    <span class="glyphicon glyphicon-comment logo"></span>
                </div>

            </div>
        </div>

        @*Back To Top Button*@
        <div class="container-fluid bg-grey">
                <div id="backtotop" class="container-fluid bg-grey">
                    <div>
                        <a href="#top" class="btn btn-info btn-lg" role="button">Back To Top</a>
                    </div>
                </div>
        </div>
    </div>
