<div id="DashboardHM">
    <div id="ViewApplicantInfo">
        <div class="container-fluid">
            <div class="jumbotron col-md-offset-2">
                <h1>Applicant Information</h1>
            </div>
            <div class="col-md-12" id="AppInfoDiv">
                @{Html.RenderAction("ApplicantInformationList", "HiringManager");}
            </div>
        </div>
    </div>

    <div id="InterviewSection">
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-interval="false" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                    <li data-target="#myCarousel" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">

                    <div class="item active">
                        <div class="jumbotron">
                            <h1>Applicants Awaiting Interview</h1>
                        </div>
                        <div class="carousel-tiles">
                            <div class="container-fluid">
                              
                            </div>
                        </div>
                        <img src="~/Content/Images/Interview_Background_3.jpg" alt="Interview" width="1000" height="665" />
                    </div>

                    <div class="item">
                        <div class="jumbotron">
                            <h1>Hired Applicants</h1>
                        </div>
                        <img src="~/Content/Images/Interview_Background_0.jpg" alt="Interview" width="1698" height="1131"></>
                    </div>

                    <div class="item">
                        <div class="jumbotron">
                            <h1>Applicants Awaiting Decision</h1>
                        </div>
                        <img src="~/Content/Images/Interview_Background_1.jpg" alt="Interview" width="1698" height="1131"></>
                    </div>

                    <div class="item">
                        <div class="jumbotron">
                            <h1>Applicants Not Accepted</h1>
                        </div>
                        <img src="~/Content/Images/Interview_Background_2.jpg" alt="Interview" width="1000" height="667"></>
                    </div>

                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <div id="RequestPositions">
        <div class="container-fluid">
            <div class="jumbotron col-md-offset-2">
                <h1>Request Positions</h1>
            </div>
        </div>
    </div>
   

</div>

