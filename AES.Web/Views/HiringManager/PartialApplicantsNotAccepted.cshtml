@model AES.Web.Models.HiringManagerModel


@* Tiles *@

<div id="PartialApplicantsNotAccepted">
    <div class="col-md-3">
        <div class="tile">
            <h3 class="title">@Model.FirstName @Model.LastName</h3>
            <p>
                @using (Html.BeginForm("StaticApplicationHM", "HiringManager", FormMethod.Post))
                {
                    <input type="hidden" name="ApplicantID" value=@Model.ApplicantID />
                    <input type="hidden" name="ApplicantStatus" value="Denied" />
                    <button type="submit" class="btn btn-danger btn-sm" value="ViewInfo">
                        <i class="glyphicon glyphicon-user"></i> View Info
                    </button>
                }
            </p>
        </div>
    </div>
</div>

