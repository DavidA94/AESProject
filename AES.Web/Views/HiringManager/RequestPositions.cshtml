@model AES.Web.Models.JobModel

@{
    ViewBag.Title = "RequestPositions";
}

<h2>RequestPositions</h2>

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @using (Html.BeginForm("RequestPositions", "HiringManager", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Tell us about yourself.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            }

        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}