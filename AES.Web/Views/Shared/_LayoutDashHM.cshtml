<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <title>@ViewBag.Title - AES Inc.</title>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body id="DashHMLayout" data-spy="scroll" data-target=".navbar" data-offset="60">

        <div id="Affix">
            <div class="container-fluid" id="BackToTopDashHM">
                <div class="col-md-push-4">
                    <img src="~/Content/Images/AESLogo_White.svg" alt="AES Logo">
                </div>

                <div class="=col-md-12">
                    <h2 class="affix-heading">Dashboard</h2>
                </div>

                <div class="jumbotron">
                    <h1>Hiring Manager</h1>
                </div>

                <div id="circlebutton">
                    <a data-smooth="true" href="#ViewApplicantInfo" class="btn btn-circle">
                        <i class="fa fa-angle-double-down animated"></i>
                    </a>
                </div>
                

            </div>
        </div>
        <div id="custom-navbar">
            <div class="nav-wrapper">
                <nav class="navbar navbar-inverse affix" data-spy="affix" data-offset-top="720">
                    <ul class="nav navbar-nav">

                        <li id="navbarlogo">
                            <a href="#">
                                <img src="~/Content/Images/AESLogo_White.svg" alt="AES Logo">
                            </a>
                        </li>
                        <li>@Html.ActionLink("Dashboard", "Dashboard", "IT")</li>
                        <li><a data-smooth="true" href="#BackToTopDashHM">Dashboard</a></li>
                        <li><a data-smooth="true" href="#ViewApplicantInfo">View Applicant Info</a></li>
                        <li><a data-smooth="true" href="#InterviewSection">Interview Section</a></li>
                        <li><a data-smooth="true" href="#RequestPositions">Request Positions</a></li>
                    </ul>
                    @Html.Partial("_LogoutPartial")
                </nav>
            </div>
        </div>

        @RenderBody()


        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/Scripts/SmoothScroll.js")
        @RenderSection("scripts", required: false)
    </body>
</html>

