@model AES.Web.Models.EmployeeUserModel
<div class="editBox">
    @using (Html.BeginForm("SaveUser", "IT", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="form-group name">
            <h3>@Model.FirstName @Model.LastName</h3>
        </div>

        <div class="form-group nameEdit">
            @Html.LabelFor(m => m.FirstName, new { @class = "control-label  " })
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group nameEdit">
            @Html.LabelFor(m => m.LastName, new { @class = "control-label  " })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.StoreName, new { @class = "control-label  " })
            @Html.DropDownListFor(m => m.StoreID, Model.AvailableStores, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.StoreName, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, new { @class = "control-label" })
            @Html.EnumDropDownListFor(m => m.Role, new { @class = "form-control roleBox" })
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <div class="pull-right">
                <input type="submit" name="submitBtn" value="Save Edits" class="btn btn-success" />
            </div>
        </div>
    }
</div>
