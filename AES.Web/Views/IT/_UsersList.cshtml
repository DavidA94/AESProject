@using AES.Web.Models;
@model IEnumerable<EmployeeUserModel>
@foreach (EmployeeUserModel e in Model)
{
    <div class="item">
        @* The pesky ToString().Trim() stuff is so there are no spaces inside the parentheses. *@
        <div class="no-overflow">
            <p class="name">
                <span class="material-icons">person</span>
                <span class="userName">@e.FirstName @e.LastName</span> <span>(@Html.DisplayFor(m => e.Role).ToString().Trim())</span>
            </p>
            <p><span class="material-icons">email</span> <span class="email">@e.Email</span></p>
            <p><span class="material-icons">store</span> <span class="storeName">@e.StoreName</span></p>

            <div class="deactivate"><div class="btn btn-danger">Deactivate</div></div>
            <div class="edit"><div class="btn btn-default">Edit</div></div>
        </div>
        @{Html.RenderPartial("_UserEdit", e);}
    </div>
}
