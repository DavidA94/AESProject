@using AES.Web.Models;
@model IEnumerable<StoreModel>
@foreach (StoreModel e in Model)
{
    <div class="item">
        @* The pesky ToString().Trim() stuff is so there are no spaces inside the parentheses. *@
        <div class="no-overflow">
            <p class="name"><span class="material-icons">store</span> <span class="userName">@e.Name</span></p>
            <p><span class="material-icons">contact_mail</span> @e.Address</p>
            <p><span class="material-icons">contact_phone</span> @e.Phone</p>
            
            <div class="deactivate"><div class="btn btn-danger">Deactivate</div></div>
            <div class="edit"><div class="btn btn-default">Edit</div></div>
        </div>
        @{Html.RenderPartial("_StoreEdit", e);}
    </div>
}
