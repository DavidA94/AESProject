@model AES.Web.Models.HiringSpecialistModel

@* Tiles *@

<div id="PartialApplicantsAwaitingCall">
    <div class="col-md-4">
        <div class="tile">
            <h3 class="title">@Model.FirstName @Model.LastName</h3>
            <p>
                @using (Html.BeginForm("CallPage", "HiringSpecialist", FormMethod.Post))
                {
                    <input type="hidden" name="ApplicantID" value=@Model.ApplicantID />
                    <div>
                        <button type="submit" class="btn btn-success btn-lg" value="Call">
                            <i class="glyphicon glyphicon-earphone"></i> Call
                        </button>
                    </div>
                    <div class="padTop">
                        <span class="staticText" id="eta"><b>Call Before:</b> @Model.ETA</span>
                    </div>
                }
            </p>
        </div>
    </div>
</div>


