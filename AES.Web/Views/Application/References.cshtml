@model AES.Web.Models.ReferencesViewModel

@{
    ViewBag.Title = "References";
}

<h2>References</h2>

<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("References", "Application", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Enter your references here.</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @* Reference Name *@
                    @Html.LabelFor(m => m.ReferenceName, new { @class = "col-md-2 control-label" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.ReferenceName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ReferenceName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @* Company *@
                    @Html.LabelFor(m => m.Company, new { @class = "col-md-2 control-label" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Company, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Company, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @* Phone Number *@
                    @Html.LabelFor(m => m.Phone, new { @class = "col-md-2 control-label" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    @* Title *@
                    @Html.LabelFor(m => m.Title, new { @class = "col-md-2 control-label" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="bottom-left">
                        <input type="submit" value="Proceed to Next Section" class="btn btn-default" />
                    </div>
                </div>
            }

        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
