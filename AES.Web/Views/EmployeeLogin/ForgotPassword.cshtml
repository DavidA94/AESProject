@model AES.Web.Models.EmployeeLoginModel

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_LayoutNavbarOnlyLogo.cshtml";
}

<h2>Forgot Password</h2>
<div class="row">
    <div class="col-md-12">
        <section id="loginForm">
            @if (ViewBag.SuccessfulReset == null || !ViewBag.SuccessfulReset)
            {
                using (Html.BeginForm("ForgotPassword", "EmployeeLogin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h4>Enter your email address</h4>
                    <hr />

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new { @class = "col-md-1 control-label" })
                        <div class="col-md-4">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="Reset Password" class="btn btn-default" />
                        </div>
                    </div>
                }
            }
            else
            {
                <h4>Your password has been reset. Please check your email for further instructions.</h4>
                <p>@Html.ActionLink("Go to login page", "Login")</p>
            }
        </section>
    </div>
</div>
